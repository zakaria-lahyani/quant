# ============================================================================
# Account Configuration Template
# ============================================================================
# Copy this file and rename to {account_name}.env
# Example: funded_next.env, acg_daily.env, ftmo_swing.env

# App identification
APP_NAME=my_account
APP_TAG=MY_ACCOUNT

# MT5 API
API_BASE_URL=http://host.docker.internal:8000/mt5
API_TIMEOUT=10
ACCOUNT_TYPE=daily  # daily or swing

# Configuration paths
CONF_FOLDER_PATH=configs/my_account
CONF_ACCOUNT=services.yaml

# Trading mode
TRADE_MODE=live  # live or backtest

# Restrictions
NEWS_RESTRICTION_DURATION=2
MARKET_CLOSE_RESTRICTION_DURATION=10
